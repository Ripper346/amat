{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "debug mex-file",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/local/matlab/bin/glnxa64/MATLAB",
            "args": ["-nojvm","-r","debugmex"],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },

        { 
            "name": "(gdb) Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceRoot}/cpp/setCoverGreedy.mexa64",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb"
        },

        {
            "name": "debug AMAT-cpp",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/cpp/AMAT-cpp-debug",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}